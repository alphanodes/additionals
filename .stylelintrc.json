{
  "extends": "stylelint-config-standard",
  "rules": {
    "string-quotes": "single",
    "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$|block_column",
    "font-family-no-missing-generic-family-keyword": [
      true,
      {
        "ignoreFontFamilies": [
          "Font Awesome 5 Free",
          "Font Awesome 5 Brands",
          "Apple Color Emoji",
          "Segoe UI Emoji",
          "Segoe UI Symbol",
          "Noto Color Emoji"
        ]
      }
    ]
  }
}
